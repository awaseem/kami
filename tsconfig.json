{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["es2018", "dom", "esnext"],
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "build",
    "rootDir": "."
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
